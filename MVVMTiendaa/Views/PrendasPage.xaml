<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMTiendaa.PrendasPage"
             Title="PrendasPage">
    <ScrollView>
    <VerticalStackLayout>
        <StackLayout BackgroundColor="MediumPurple" Padding="20" VerticalOptions="Start">
            <Label Text="K.C STORE" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" TextColor="SeaShell" />
        </StackLayout>
        
        <StackLayout 
        BackgroundColor="White" Padding="5" VerticalOptions="Start">
        </StackLayout>

        <HorizontalStackLayout HorizontalOptions="Center">

            <Label 
        FontAttributes="Bold"
        Text="PRENDAS"
        FontSize="30"
        VerticalOptions="Center" 
        HorizontalOptions="Center" 
        TextColor="MediumPurple"/>
        </HorizontalStackLayout>

        <StackLayout HorizontalOptions="CenterAndExpand">
            <HorizontalStackLayout>
                <TableView HorizontalOptions="CenterAndExpand">
                    <TableRoot>
                        <TableSection>
                            <EntryCell x:Name="BuscarPorID"
                                       Text="{Binding BuscarPorID}"
                                Placeholder="Buscar por CÃ³digo" 
                                LabelColor="Black" 
                                HorizontalTextAlignment="Center" />
                        </TableSection>
                    </TableRoot>
                </TableView>
                <Label Text=" "/>

                <Image 
                Source="loupe.png"
                WidthRequest="40"
                HeightRequest="40"
                VerticalOptions="EndAndExpand"
                HorizontalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnClickBuscar"/>
                    </Image.GestureRecognizers>
                </Image>
            </HorizontalStackLayout>
        </StackLayout>

        
        <ListView x:Name="productos"
                       ItemsSource="{Binding ListaPrenda}"  
          RowHeight="130" 
          ItemSelected="OnClickMostrarDetalles">

            <ListView.ItemTemplate>
                <DataTemplate>
                    
                    <ViewCell>
                        
                        <StackLayout Orientation="Horizontal">
                            
                                <Label Text=""/>
                                <Frame CornerRadius="15" BackgroundColor="MediumPurple" Padding="1" Margin="15" HeightRequest="95" WidthRequest="363">
                                
                                    <HorizontalStackLayout>
                                    <Label Text="    "/>
                                    <Image 
                                    Source="ropa.png"
                                    WidthRequest="50"
                                    HeightRequest="50"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center">

                                    </Image>
                                    <Label Text="      "/>
                                    <VerticalStackLayout>
                                       

                                        <Label VerticalOptions="Start" FontSize="20" FontAttributes="Bold">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                        <Span Text="Producto: " FontSize="16" FontAttributes="Bold" TextColor="White"/>
                                                        <Span Text="{Binding nombre}" FontSize="16" TextColor="White"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                            <Label VerticalOptions="Start" FontSize="20" FontAttributes="Bold">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="COD: " FontSize="16" FontAttributes="Bold" TextColor="White"/>
                                                        <Span  Text="{Binding idPrenda}" FontSize="16" TextColor="White"/>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>

                                            <Label VerticalOptions="Start" FontSize="20" FontAttributes="Bold" >
                                            <Label.FormattedText>
                                                <FormattedString>
                                                        <Span Text="Cantidad: " FontSize="16" FontAttributes="Bold" TextColor="White"/>
                                                        <Span Text="{Binding cantidad}" FontSize="16" TextColor="White"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label VerticalOptions="Start" FontSize="20" FontAttributes="Bold">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                        <Span Text="Precio Unitario: $" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                                                        <Span Text="{Binding precio}" FontSize="16" TextColor="White" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </VerticalStackLayout>

                                        

                                    </HorizontalStackLayout>
                                
                            </Frame>

                           
                        </StackLayout>

                    </ViewCell>

                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>
